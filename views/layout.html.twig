<!DOCTYPE html>
<html lang="en">
    <head>
    {% block head %}
        <meta charset="utf-8">
        <title>{% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="{{ app.request.basePath }}/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basePath }}/vendor/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
        <!--[if lt IE 9]>
            <script src="{{ app.request.basePath }}/vendor/html5.js"></script>
        <![endif]-->
    {% endblock %}
    </head>
    <body>
        <div class="container">
            {% block content %}
            {% endblock %}
        </div>

        <script src="{{ app.request.basePath }}/vendor/jquery.min.js"></script>
        <script src="{{ app.request.basePath }}/vendor/bootstrap/js/bootstrap.min.js"></script>
        {% block scripts %}
        {% endblock %}
    </body>
</html>
